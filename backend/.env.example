# Application
NODE_ENV=development
PORT=5000
API_VERSION=v1
FRONTEND_URL=http://localhost:5173

# Database (AWS RDS PostgreSQL)
DB_HOST=your-rds-instance.amazonaws.com
DB_PORT=5432
DB_NAME=nexa_crm
DB_USER=postgres
DB_PASSWORD=your-secure-password
DB_SSL=true

# Redis (AWS ElastiCache)
REDIS_HOST=your-elasticache.amazonaws.com
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=your-refresh-token-secret
REFRESH_TOKEN_EXPIRES_IN=30d

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# AWS S3 (File Storage)
AWS_S3_BUCKET=nexa-crm-files
AWS_S3_REGION=us-east-1

# AWS SES (Email Service)
AWS_SES_REGION=us-east-1
AWS_SES_FROM_EMAIL=noreply@yourcrm.com
AWS_SES_FROM_NAME=Nexa CRM

# AWS Cognito (Optional - Advanced Auth)
AWS_COGNITO_USER_POOL_ID=your-user-pool-id
AWS_COGNITO_CLIENT_ID=your-client-id
AWS_COGNITO_REGION=us-east-1

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# CORS
CORS_ORIGIN=http://localhost:5173,https://yourcrm.com

# Encryption
ENCRYPTION_KEY=your-32-character-encryption-key

# API Keys (for integrations)
OPENAI_API_KEY=your-openai-key
STRIPE_SECRET_KEY=your-stripe-key
SENDGRID_API_KEY=your-sendgrid-key
